@import 'core/styl/_mixin'
@import 'core/styl/_reset'
@import 'core/styl/_base'

html, body
  width 100%
  height 100%
  font-family "Hiragino Kaku Gothic Pro W6", "ヒラギノ角ゴ Pro W6", 'HiraKakuProN-W6', 'Droid Font', Helvetica, "Helvetica Bold", Helvetica-Bold, sans-serif
  -webkit-tap-highlight-color rgba(0,0,0,0)
  tap-highlight-color rgba(0,0,0,0)
  -webkit-user-select none
  user-select: none
  color: #34495E
  line-height: 1.2

body, body *, body *::before, body *::after
  position: relative;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;

body
  font 12px sans-serif
/**
 * utils
 */
.osl-centering-transform
  position absolute
  top 50%
  left 50%
  transform(translate(-50%, -50%))

/**
 * banner
 */
.osl-banner
  text-align center
  margin 5px auto

/*.osl-banner a*/

.osl-banner img
  background-color #9B59B6

/**
 * footer
 */
.osl-footer
  width 100%
  height 60px
  background-color #E67E22
  text-align center
  color #34495E

.osl-footer-container
  padding 5px 0

.osl-footer .osl-btn
  width 55px
  height 50px
  display inline-block
  overflow hidden

/**
 * header
 */
.osl-header
  display block
  position absolute
  top 0
  left 0
  width 100%
  height 60px
  background-color #3498DB
  color #34495E
  z-index 100

.osl-header-titlebar
  width 190px
  height 50px
  overflow hidden
  margin 0 auto
  position relative
  top 5px
  background-color #2980B9
  text-align center
  color #ECF0F1

.osl-header .osl-btn
  width 50px
  height 50px


/**
 * buttons
 */
.osl-btn
  border-radius(4px)
  word-wrap break-word
  background-color #ECF0F1
  cursor pointer

.osl-btn[data-code^="global"]
  position absolute
  top 0

.osl-btn[data-code="global-mypage"]
  left 5px
  top 5px

.osl-btn[data-code="global-menu"]
  right 5px
  top 5px

.osl-main
  margin -60px auto 0

.osl-main-content
  min-height 480px
  background-color #1ABC9C

/**
 * mypageのみ
 */
#mypage-btn-container
  top 150px

#mypage-btn-container-L
  position absolute
  top 0
  width 55px
  left 5px

#mypage-btn-container-R
  position absolute
  top 0
  width 55px
  right 5px

#mypage-btn-container .osl-btn
  width 40px
  height 40px
  margin 0 0 10px 10px

#mypage-main-btn-container
  position absolute
  bottom 0
  width 100%

.osl-btn[data-code^="mypage"]
  position absolute
  bottom 0

.osl-btn[data-code="mypage-battle"]
  left 0
  bottom 60px
  width 100px
  height 100px

.osl-btn[data-code="mypage-quest"]
  right 0
  bottom 60px
  width 100px
  height 100px

.osl-btn[data-code="mypage-gacha"]
  width 80px
  height 80px
  left 50%
  bottom 30px
  margin-left -40px

.osl-btn[data-code="mypage-team"],
.osl-btn[data-code="mypage-weapon"],
.osl-btn[data-code="mypage-sell"],
.osl-btn[data-code="mypage-mix"]
  width 40px
  height 40px

.osl-btn[data-code="mypage-team"]
  left 5px
  bottom 5px

.osl-btn[data-code="mypage-mix"]
  right 5px
  bottom 5px

.osl-btn[data-code="mypage-weapon"]
  left 60px
  bottom 10px

.osl-btn[data-code="mypage-sell"]
  right 60px
  bottom 10px

.osl-btn[data-code="mypage-total"]
  width 100px
  height 50px
  left 50%
  margin-left -50px
  bottom 120px
